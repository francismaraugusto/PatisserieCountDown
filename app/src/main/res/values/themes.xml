<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base do aplicativo -->
    <style name="Theme.PatisserieGourmetCountdown" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Cor primária (barra superior, botões etc.) -->
        <item name="colorPrimary">@color/purple_500</item>

        <!-- Cor primária mais escura (barra de status) -->
        <item name="colorPrimaryDark">@color/purple_700</item>

        <!-- Cor de destaque (botões, seleção etc.) -->
        <item name="colorAccent">@color/teal_200</item>

        <!-- Cor de fundo da tela -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Cor do texto da ActionBar -->
        <item name="android:textColorPrimary">@android:color/black</item>

        <!-- Opcional: estilo para botões -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

</resources>
